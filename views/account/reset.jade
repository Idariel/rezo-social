extends ../layout

block content
  .container
    .panel
      .panel-body
        if messages.success
          .alert.alert-success(role='alert')
            for success in messages.success
              div= success.msg

        if messages.error
          .alert.alert-danger(role='alert')
            for error in messages.error
              div= error.msg

        form(method='POST')
          legend Reset Password
          .form-group
            label(for='password') Nouveau mot de passe
            input.form-control(type='password', name='password', id='password', placeholder='Nouveau mot de passe', autofocus=true)
          .form-group
            label(for='confirm') Confirmez le mot de passe
            input.form-control(type='password', name='confirm', id='confirm', placeholder='Confirmez le mot de passe')
          .form-group
            button.btn.btn-success(type='submit') Changer de mot de passe
